
<mujoco model="test_robot">
  <compiler angle="radian"/>
  
  <default>
    <joint armature="0.01" damping="0.5"/>
    <geom rgba="0.8 0.2 0.1 1" friction="1.0 0.005 0.0001"/>
    <motor gear="50" ctrlrange="-1 1"/>
  </default>
  
  <worldbody>
    <body name="torso" pos="0 0 0.35">
      <joint name="root" type="free"/>
      <geom name="torso_geom" type="box" size="0.2 0.1 0.05" mass="5"/>
      
      <!-- Front left leg -->
      <body name="fl_upper" pos="0.15 0.12 0">
        <joint name="fl_hip" type="hinge" axis="0 1 0" range="-0.8 0.8"/>
        <geom type="capsule" size="0.025" fromto="0 0 0 0 0 -0.12" rgba="0.2 0.2 0.2 1"/>
        <body name="fl_lower" pos="0 0 -0.12">
          <joint name="fl_knee" type="hinge" axis="0 1 0" range="-1.5 0.0"/>
          <geom type="capsule" size="0.02" fromto="0 0 0 0 0 -0.12" rgba="0.3 0.3 0.3 1"/>
        </body>
      </body>
      
      <!-- Front right leg -->
      <body name="fr_upper" pos="0.15 -0.12 0">
        <joint name="fr_hip" type="hinge" axis="0 1 0" range="-0.8 0.8"/>
        <geom type="capsule" size="0.025" fromto="0 0 0 0 0 -0.12" rgba="0.2 0.2 0.2 1"/>
        <body name="fr_lower" pos="0 0 -0.12">
          <joint name="fr_knee" type="hinge" axis="0 1 0" range="-1.5 0.0"/>
          <geom type="capsule" size="0.02" fromto="0 0 0 0 0 -0.12" rgba="0.3 0.3 0.3 1"/>
        </body>
      </body>
      
      <!-- Rear left leg -->
      <body name="rl_upper" pos="-0.15 0.12 0">
        <joint name="rl_hip" type="hinge" axis="0 1 0" range="-0.8 0.8"/>
        <geom type="capsule" size="0.025" fromto="0 0 0 0 0 -0.12" rgba="0.2 0.2 0.2 1"/>
        <body name="rl_lower" pos="0 0 -0.12">
          <joint name="rl_knee" type="hinge" axis="0 1 0" range="-1.5 0.0"/>
          <geom type="capsule" size="0.02" fromto="0 0 0 0 0 -0.12" rgba="0.3 0.3 0.3 1"/>
        </body>
      </body>
      
      <!-- Rear right leg -->
      <body name="rr_upper" pos="-0.15 -0.12 0">
        <joint name="rr_hip" type="hinge" axis="0 1 0" range="-0.8 0.8"/>
        <geom type="capsule" size="0.025" fromto="0 0 0 0 0 -0.12" rgba="0.2 0.2 0.2 1"/>
        <body name="rr_lower" pos="0 0 -0.12">
          <joint name="rr_knee" type="hinge" axis="0 1 0" range="-1.5 0.0"/>
          <geom type="capsule" size="0.02" fromto="0 0 0 0 0 -0.12" rgba="0.3 0.3 0.3 1"/>
        </body>
      </body>
    </body>
  </worldbody>
  
  <actuator>
    <motor name="fl_hip_motor" joint="fl_hip"/>
    <motor name="fl_knee_motor" joint="fl_knee"/>
    <motor name="fr_hip_motor" joint="fr_hip"/>
    <motor name="fr_knee_motor" joint="fr_knee"/>
    <motor name="rl_hip_motor" joint="rl_hip"/>
    <motor name="rl_knee_motor" joint="rl_knee"/>
    <motor name="rr_hip_motor" joint="rr_hip"/>
    <motor name="rr_knee_motor" joint="rr_knee"/>
  </actuator>
</mujoco>
